{
  "name": "gttm-hub",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev:blackjack": "pnpm --filter blackjack dev",
    "dev:presentation": "pnpm --filter presentation dev",
    "dev:systems": "pnpm --filter systems dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "tokens-vars:build": "pnpm --filter shared-tokens exec node build-tokens-vars.js",
    "tokens-theme:build": "pnpm --filter shared-tokens exec node build-tokens-theme.js",
    "tokens:watch": "pnpm --filter shared-tokens exec nodemon --watch packages/shared-tokens/tokens.json --exec \"node packages/shared-tokens/build-tokens.js\"",
    "typecheck": "tsc -b",
    "setup": "bash scripts/setup-repo.sh",
    "inventory": "bash scripts/generate-inventory.sh",
    "optimize": "bash scripts/optimize-assets.sh",
    "export:bundle": "bash scripts/export-bundle.sh",
    "sync:tokens": "bash scripts/sync-tokens.sh",
    "verify:repo": "bash scripts/verify-repo-state.sh",
    "patch:claude": "bash scripts/patch-claude-assets.sh",
    "rollback:claude": "bash scripts/rollback-claude-assets.sh",
    "manage:claude": "bash scripts/manage-claude-assets.sh",
    "prepare": "husky",
    "precommit": "pnpm run sync:tokens && pnpm run verify:repo"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "style-dictionary": "^5.1.1",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  },
  "packageManager": "pnpm@10.18.3+sha512.bbd16e6d7286fd7e01f6b3c0b3c932cda2965c06a908328f74663f10a9aea51f1129eea615134bf992831b009eabe167ecb7008b597f40ff9bc75946aadfb08d",
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
